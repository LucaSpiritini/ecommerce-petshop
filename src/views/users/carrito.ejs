<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs')%>

  <body>
    <%- include('../partials/header.ejs')%>
      <hr />
      <main>
        <br>
        <h2>Carrito de compras</h2>
        <div class="carritodecompras">
          <form>
            <div class="carritodetalleproducto">
              <table class="tablacarritodetalleproducto">

                <tr class="headcarrito">
                  <th>Producto</th>
                  <th class="center">Envío</th>
                  <th class="center">Precio</th>
                  <th class="center">Cantidad</th>
                <tr class="itemcarritoindividual">
                  <td class="imgcarritoproducto">
                    <img src="/img/undef-file-image.png" width="100px" alt="alimento-gato-excellent.png" />
                    <span>Alimento para Gato</span>
                  </td>
                  <td class="center">$ 0.4</td>
                  <td class="center">$ 1.0</td>
                  <td class="center">
                    <div class="cantidaddeproducto">
                      <input type="button" class="sumaryrestarproductominus" value="-">
                      <input type="number" name="cantidaddeproducto" id="cantidaddeproducto" placeholder="1"
                        class="inputcantidaddeproducto">
                      <input type="button" class="sumaryrestarproductoplus" value="+">
                    </div>
                  </td>
                </tr>
              </table>
            </div>

            <div class="totaldelcarrito">
              <table class="tablatotalcarrito">
                <tr class="headcarrito2">
                  <th colspan="2">Total Producto</th>
                <tr class="itemcarritoindividual">
                <tr>
                  <td>Subtotal</td>
                  <td>$1.00</td>
                </tr>
                <tr>
                  <td>Envío</td>
                  <td>$0.4</td>
                </tr>
                <tr>
                  <td>Total</td>
                  <td>$1.4</td>
                </tr>
              </table>
              <div class="proceder-checkout">
                <a href="#" class="checkout-button">Finalizar compra</a>
              </div>
            </div>

          </form>
        </div>
      </main>
      <%- include('../partials/footer.ejs')%>
  </body>

</html>