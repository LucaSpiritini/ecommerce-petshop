<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs')%>
  <body>
    <%- include('../partials/header.ejs')%>
    <main>
      <article class="carrusel"></article>
      <ul class="categoryimages">
        <li><a href="/products/1"><img src="/img/products/perros.png"></a></li>
        <li><a href="/products/2"><img src="/img/products/gatos.png"></a></li>
        <li><a href="/products/3"><img src="/img/products/peces.png"></a></li>
        <li><a href="/products/4"><img src="/img/products/aves.png"></a></li>
      </ul>
      <h2 class="productosDestacados">PRODUCTOS PARA GATOS</h2>
      <article class="productosDestacados">
        <% productsGatos.forEach( ( producto ) => { %>
          <a href="/products/<%=producto.section_id%>/<%= producto.id%>/?class=<%=producto.section_id%>"
        <div class="productos">
          <h3><%= producto.name %></h3>
          <img src="/img/products/<%= producto.image%>" alt="alimento" />
          <p><%= producto.description %></p>
          <p>Presentacion: <%= producto.packaging %> </p>
          <p class="precioshome"><%= producto.price %></p>
          <div class="homeagregaralcarrito">
            <button class="botonagregaralcarrito">AGREGAR</button>
          </div>
        </a>
          
        </div>
        <% }); %>
      </article>
    </main>
    <%- include('../partials/footer.ejs')%>
  </body>
</html>
